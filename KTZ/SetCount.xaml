<Window x:Class="KTZ.SetCount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTZ"
        mc:Ignorable="d"
        Title="SetCount" Height="450" Width="800">
    <StackPanel>
        <TextBlock Margin="15 15 15 0" Text="Строки"/>
        <TextBox Margin="15 15 15 0" x:Name="Rows"></TextBox>
        <TextBlock Margin="15 15 15 0" Text="Столбцы"/>
        <TextBox Margin="15 15 15 15" x:Name="Columns"></TextBox>
        <Button Width="90" Click="Button_Click">Построить</Button>
    </StackPanel>
</Window>
